<!DOCTYPE html>
<html>
  <head>
    <title>OdinFacebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= flash[:notice] %>
  </head>

  <body>
  <script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '{odin-project}',
      cookie     : true,
      xfbml      : true,
      version    : '{v10.0}'
    });
      
    FB.AppEvents.logPageView();   
      
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <% if current_user %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'button is-link' %>
              <% if current_user.profile %>
                <%= link_to "My Timeline", posts_path, class: 'button is-link' %>
                <%= link_to "Edit Profile", edit_profile_path, class: 'button is-link' %>
                <%= link_to "Check for Friends", users_path, class: 'button is-link' %>
                <%= link_to "My Profile", user_path(current_user), class: 'button is-link' %>
                <%= link_to "Friend Requests", invitations_path, class: 'button is-link' %>
                <%= link_to "My Friends", user_friends_path(current_user), class: 'button is-link' %>
              <% end %>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: 'button is-link' %>
              <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, method: :post, class: 'button is-link' %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
