<%= form_for(@profile, url: profile_path) do |f| %>
    <ul>
    <% @profile.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= f.label :Name %><br />
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :Surname %><br />
      <%= f.text_area :surname %>
    </p>

    <p>
      <%= f.label :Age %><br />
      <%= f.select :age, (5..100) %>
    </p>

    <p>
        <%= f.select :gender, ['Male', 'Female']%>    
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>