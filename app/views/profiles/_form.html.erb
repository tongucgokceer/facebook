<%= form_for(@profile, :html => {:multipart => true} ,url: profile_path) do |f| %>
    <ul>
    <% @profile.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= f.label :Name %><br />
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :Surname %><br />
      <%= f.text_area :surname %>
    </p>

    <p>
      <%= f.label :Age %><br />
      <%= f.select :age, (5..100) %>
    </p>

    <p>
        <%= f.select :gender, ['Male', 'Female']%>    
    </p>
    <p>
    <div class="file">
  <label class="file-label">
    <input class="file-input" type="file" name="resume">
    <span class="file-cta">
      <span class="file-icon">
        <i class="fas fa-upload"></i>
      </span>
      <span class="file-label">
        <%= f.file_field :image %>
      </span>
    </span>
  </label>
</div>
      
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>